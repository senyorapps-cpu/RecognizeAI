<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Decorative background elements -->
    <View
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:alpha="0.2"
        android:background="@drawable/bg_decorative_square"
        android:rotation="45" />

    <View
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="-20dp"
        android:layout_marginBottom="160dp"
        android:alpha="0.2"
        android:background="@drawable/bg_decorative_circle" />

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="32dp">

        <!-- App icon -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_login_icon_card"
            android:elevation="12dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_camera"
                android:tint="@color/deep_blue"
                android:contentDescription="App icon" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/sign_in"
            android:textColor="@color/deep_blue"
            android:textSize="36sp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:gravity="center"
            android:letterSpacing="-0.02" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/welcome_back"
            android:textColor="@color/deep_blue_50"
            android:textSize="14sp"
            android:fontFamily="@font/plus_jakarta_sans_medium" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Google button -->
            <FrameLayout
                android:id="@+id/btnGoogle"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/bg_white_button"
                android:elevation="8dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_google"
                        android:contentDescription="Google" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/continue_with_google"
                        android:textColor="@color/deep_blue"
                        android:textSize="18sp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold" />

                </LinearLayout>

            </FrameLayout>

            <!-- Guest button -->
            <FrameLayout
                android:id="@+id/btnGuest"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_gold_button"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="@color/deep_blue"
                        android:contentDescription="Guest" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/continue_as_guest"
                        android:textColor="@color/deep_blue"
                        android:textSize="18sp"
                        android:fontFamily="@font/plus_jakarta_sans_bold" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="48dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Language selector -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_mapmode"
                android:tint="@color/deep_blue_50"
                android:contentDescription="Language" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/language_english"
                android:textColor="@color/deep_blue_50"
                android:textSize="14sp"
                android:fontFamily="@font/plus_jakarta_sans_medium" />

        </LinearLayout>

        <!-- Privacy and Terms -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                android:textColor="@color/deep_blue_20"
                android:textSize="12sp"
                android:fontFamily="@font/plus_jakarta_sans_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="â€¢"
                android:textColor="@color/deep_blue_10"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_of_service"
                android:textColor="@color/deep_blue_20"
                android:textSize="12sp"
                android:fontFamily="@font/plus_jakarta_sans_medium" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
