<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_saved">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Sticky header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="48dp"
            android:paddingBottom="16dp"
            android:paddingHorizontal="24dp"
            android:background="#CCFFFFFF">

            <!-- Title row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/saved_photos_title"
                    android:textColor="@color/deep_blue"
                    android:textSize="24sp"
                    android:fontFamily="@font/inter_bold"
                    android:letterSpacing="-0.02" />

            </LinearLayout>

            <!-- Filter chips -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:clipToPadding="false">

                <LinearLayout
                    android:id="@+id/chipContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_chip_active"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/chip_all"
                        android:textColor="@color/deep_blue"
                        android:textSize="13sp"
                        android:fontFamily="@font/inter_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_chip_inactive"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/chip_recent"
                        android:textColor="@color/deep_blue_50"
                        android:textSize="13sp"
                        android:fontFamily="@font/inter_semibold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_chip_inactive"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/chip_landmarks"
                        android:textColor="@color/deep_blue_50"
                        android:textSize="13sp"
                        android:fontFamily="@font/inter_semibold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_chip_inactive"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:text="@string/chip_nature"
                        android:textColor="@color/deep_blue_50"
                        android:textSize="13sp"
                        android:fontFamily="@font/inter_semibold" />

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

        <!-- Photo grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSaved"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="100dp"
            android:clipToPadding="false"
            android:overScrollMode="never" />

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="48dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_bookmark"
                android:alpha="0.3"
                android:contentDescription="No saved photos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/no_saved_photos"
                android:textColor="@color/deep_blue_50"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/no_saved_photos_desc"
                android:textColor="@color/deep_blue_20"
                android:textSize="14sp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_nav_bar"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="32dp"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_filled"
                android:alpha="0.3"
                android:contentDescription="@string/nav_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/nav_home"
                android:textColor="@color/deep_blue_20"
                android:textSize="10sp"
                android:fontFamily="@font/inter_bold"
                android:textAllCaps="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navMap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_explore"
                android:alpha="0.3"
                android:contentDescription="@string/nav_map" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/nav_map"
                android:textColor="@color/deep_blue_20"
                android:textSize="10sp"
                android:fontFamily="@font/inter_bold"
                android:textAllCaps="true" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false">

            <FrameLayout
                android:id="@+id/navCamera"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:translationY="-24dp"
                android:background="@drawable/bg_fab_camera"
                android:elevation="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera"
                    android:contentDescription="Camera" />

            </FrameLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/navSaved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bookmark"
                android:contentDescription="@string/nav_saved" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/nav_saved"
                android:textColor="@color/deep_blue"
                android:textSize="10sp"
                android:fontFamily="@font/inter_bold"
                android:textAllCaps="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                android:alpha="0.3"
                android:contentDescription="@string/nav_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/nav_profile"
                android:textColor="@color/deep_blue_20"
                android:textSize="10sp"
                android:fontFamily="@font/inter_bold"
                android:textAllCaps="true" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
