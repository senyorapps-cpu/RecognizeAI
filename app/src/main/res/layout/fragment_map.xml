<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/googleMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/gold_accent"
        android:visibility="gone" />

    <!-- Zoom controls + My Location button on right side -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="200dp"
        android:orientation="vertical">

        <!-- My Location button -->
        <FrameLayout
            android:id="@+id/btnMyLocation"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_map_button"
            android:elevation="4dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_my_location"
                app:tint="@color/deep_blue" />

        </FrameLayout>

        <!-- Zoom In -->
        <FrameLayout
            android:id="@+id/btnZoomIn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg_map_button_top"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+"
                android:textColor="@color/deep_blue"
                android:textSize="22sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- Zoom Out -->
        <FrameLayout
            android:id="@+id/btnZoomOut"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_map_button_bottom"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="\u2212"
                android:textColor="@color/deep_blue"
                android:textSize="22sp"
                android:textStyle="bold" />

        </FrameLayout>

    </LinearLayout>

    <!-- Bottom Detail Card -->
    <LinearLayout
        android:id="@+id/cardLandmarkDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_map_card"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Landmark name + location row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/deep_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCardLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/deep_blue_50"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Thumbnail -->
            <ImageView
                android:id="@+id/imgCardThumbnail"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <!-- Info chips row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCardCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_map_chip"
                android:fontFamily="@font/inter_medium"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textColor="@color/deep_blue"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvCardDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_map_chip"
                android:fontFamily="@font/inter_medium"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textColor="@color/deep_blue"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvCardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/deep_blue_50"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Explore button -->
        <TextView
            android:id="@+id/btnExploreAI"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_contact_button"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:text="@string/map_explore_ai"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>
