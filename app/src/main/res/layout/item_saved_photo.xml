<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_saved_image"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/imgSaved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="Saved photo" />

        <!-- Delete button top-right -->
        <ImageView
            android:id="@+id/btnDeleteItem"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:padding="7dp"
            android:background="@drawable/bg_delete_badge"
            android:src="@drawable/ic_delete_white"
            android:scaleType="centerInside"
            android:contentDescription="Delete item" />

        <!-- Pending overlay (deep blue semi-transparent) -->
        <View
            android:id="@+id/pendingOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_offline_overlay"
            android:visibility="gone" />

        <!-- Pending badge with wifi icon -->
        <LinearLayout
            android:id="@+id/pendingBadgeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_offline_badge"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_wifi_off"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/tvPendingBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/saved_offline"
                android:textColor="@color/deep_blue"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Bottom gradient overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_bottom_dark" />

        <!-- Text overlay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvSavedName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/inter_bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvSavedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#B3FFFFFF"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:maxLines="1" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
