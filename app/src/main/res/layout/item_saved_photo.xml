<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_saved_image"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/imgSaved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="Saved photo" />

        <!-- Heart icon top-right -->
        <ImageView
            android:id="@+id/btnHeart"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:padding="4dp"
            android:src="@drawable/ic_favorite_filled"
            android:contentDescription="Favorite" />

        <!-- Pending overlay (dark semi-transparent) -->
        <View
            android:id="@+id/pendingOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:visibility="gone" />

        <!-- Pending badge -->
        <TextView
            android:id="@+id/tvPendingBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_pending_badge"
            android:text="@string/pending_analysis"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"
            android:visibility="gone" />

        <!-- Bottom gradient overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_bottom_dark" />

        <!-- Text overlay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvSavedName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvSavedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#B3FFFFFF"
                android:textSize="11sp"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:maxLines="1" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
