<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- Spacer for skip button area -->
    <View
        android:layout_width="match_parent"
        android:layout_height="64dp" />

    <!-- Illustration area -->
    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center">

        <!-- Outer circle -->
        <View
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_circle_border" />

        <!-- Middle circle -->
        <View
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_circle_border" />

        <!-- Inner circle -->
        <View
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_circle_border" />

        <!-- Dashed circle -->
        <View
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_circle_dashed"
            android:rotation="25" />

        <!-- Icon card -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_icon_card"
            android:elevation="16dp"
            android:padding="40dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_menu_camera"
                android:tint="@color/gold_accent"
                android:contentDescription="Camera" />

        </LinearLayout>

        <!-- Gold dot decoration -->
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/bg_gold_icon_circle"
            android:elevation="2dp" />

        <!-- Small dot decoration -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="start"
            android:layout_marginTop="180dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/bg_circle_border" />

    </FrameLayout>

    <!-- Bottom content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="32dp"
        android:paddingBottom="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_title_1"
            android:textColor="@color/deep_blue"
            android:textSize="36sp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:gravity="center"
            android:letterSpacing="-0.02"
            android:lineSpacingMultiplier="1.1" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/onboarding_desc_1"
            android:textColor="@color/deep_blue_70"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:gravity="center"
            android:lineSpacingMultiplier="1.4" />

        <!-- Page indicators -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="32dp"
                android:layout_height="10dp"
                android:background="@drawable/bg_gold_tag" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_circle_border" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_circle_border" />

        </LinearLayout>

        <!-- Next button -->
        <FrameLayout
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/bg_gold_button"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next"
                    android:textColor="@color/deep_blue"
                    android:textSize="20sp"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:src="@android:drawable/ic_media_play"
                    android:tint="@color/deep_blue"
                    android:rotation="0"
                    android:contentDescription="Next" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="32dp" />

</LinearLayout>
