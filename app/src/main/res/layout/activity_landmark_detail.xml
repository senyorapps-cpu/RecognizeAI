<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SECTION 1 — Hero Image -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="380dp">

                <ImageView
                    android:id="@+id/imgHero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Colosseum" />

                <!-- Dark gradient overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/gradient_top_dark" />

                <!-- Top bar — back / favourite / share -->
                <LinearLayout
                    android:id="@+id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="48dp">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_detail_top_btn"
                        android:src="@drawable/ic_arrow_back"
                        android:scaleType="centerInside"
                        android:contentDescription="Back" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/btnFavorite"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_detail_top_btn"
                        android:src="@drawable/ic_favorite_filled"
                        android:scaleType="centerInside"
                        android:contentDescription="Favorite" />

                    <ImageButton
                        android:id="@+id/btnShare"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_detail_top_btn"
                        android:src="@drawable/ic_share"
                        android:scaleType="centerInside"
                        android:contentDescription="Share" />

                </LinearLayout>

            </FrameLayout>

            <!-- SECTION 2 — White Content Card (overlaps hero) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:background="@drawable/bg_content_top_rounded"
                android:orientation="vertical"
                android:paddingTop="32dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <!-- Discovery Report label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/discovery_report"
                    android:textColor="@color/gold_accent"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.25"
                    android:fontFamily="@font/plus_jakarta_sans_bold" />

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="@string/the_colosseum"
                    android:textColor="@color/deep_blue"
                    android:textSize="36sp"
                    android:fontFamily="@font/playfair_display_bold"
                    android:gravity="center" />

                <!-- 5 gold stars -->
                <LinearLayout
                    android:id="@+id/starsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_star_outline"
                        android:contentDescription="Star 1"
                        android:layout_marginEnd="6dp" />

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_star_outline"
                        android:contentDescription="Star 2"
                        android:layout_marginEnd="6dp" />

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_star_outline"
                        android:contentDescription="Star 3"
                        android:layout_marginEnd="6dp" />

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_star_outline"
                        android:contentDescription="Star 4"
                        android:layout_marginEnd="6dp" />

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_star_outline"
                        android:contentDescription="Star 5" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvRatingLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/gold_accent"
                    android:textSize="15sp"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:visibility="gone" />

                <!-- Tap to rate prompt -->
                <TextView
                    android:id="@+id/tvTapToRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:text="@string/tap_to_rate"
                    android:textColor="@color/deep_blue_50"
                    android:textSize="13sp"
                    android:fontFamily="@font/plus_jakarta_sans_medium"
                    android:alpha="0"
                    android:visibility="visible" />

                <!-- Location row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location_on"
                        android:contentDescription="Location"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/colosseum_location"
                        android:textColor="@color/deep_blue_50"
                        android:textSize="14sp"
                        android:fontFamily="@font/plus_jakarta_sans_medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- SECTION 3 — Info Grid (2x2) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="24dp">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Card 1 — Year Built -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/bg_info_tile"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar_add"
                            android:contentDescription="@string/year_built" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/year_built"
                            android:textColor="@color/deep_blue_50"
                            android:textSize="10sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.15"
                            android:fontFamily="@font/plus_jakarta_sans_medium" />

                        <TextView
                            android:id="@+id/tvYearBuiltValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/year_built_value"
                            android:textColor="@color/deep_blue"
                            android:textSize="14sp"
                            android:fontFamily="@font/plus_jakarta_sans_bold" />

                    </LinearLayout>

                    <!-- Card 2 — Status -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/bg_info_tile"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check"
                            android:contentDescription="@string/status_label" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/status_label"
                            android:textColor="@color/deep_blue_50"
                            android:textSize="10sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.15"
                            android:fontFamily="@font/plus_jakarta_sans_medium" />

                        <TextView
                            android:id="@+id/tvStatusValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/unesco_site"
                            android:textColor="@color/deep_blue"
                            android:textSize="14sp"
                            android:fontFamily="@font/plus_jakarta_sans_bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <!-- Card 3 — Architect -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/bg_info_tile"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_auto_stories"
                            android:contentDescription="@string/architect" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/architect"
                            android:textColor="@color/deep_blue_50"
                            android:textSize="10sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.15"
                            android:fontFamily="@font/plus_jakarta_sans_medium" />

                        <TextView
                            android:id="@+id/tvArchitectValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/flavian_dynasty"
                            android:textColor="@color/deep_blue"
                            android:textSize="14sp"
                            android:fontFamily="@font/plus_jakarta_sans_bold" />

                    </LinearLayout>

                    <!-- Card 4 — Capacity -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/bg_info_tile"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_person"
                            android:contentDescription="@string/capacity" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/capacity"
                            android:textColor="@color/deep_blue_50"
                            android:textSize="10sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.15"
                            android:fontFamily="@font/plus_jakarta_sans_medium" />

                        <TextView
                            android:id="@+id/tvCapacityValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/capacity_value"
                            android:textColor="@color/deep_blue"
                            android:textSize="14sp"
                            android:fontFamily="@font/plus_jakarta_sans_bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- SECTION 4 — AI Narrative -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_narrative"
                    android:textColor="@color/deep_blue"
                    android:textSize="24sp"
                    android:fontFamily="@font/playfair_display_bold" />

                <!-- Paragraph 1 -->
                <TextView
                    android:id="@+id/tvNarrativeP1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/colosseum_text_1"
                    android:textColor="@color/deep_blue_70"
                    android:textSize="18sp"
                    android:fontFamily="@font/playfair_display"
                    android:lineSpacingMultiplier="1.8" />

                <!-- Quote block with gold left border -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/gold_accent" />

                    <TextView
                        android:id="@+id/tvNarrativeQuote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="24dp"
                        android:paddingEnd="0dp"
                        android:text="@string/colosseum_quote"
                        android:textColor="@color/deep_blue_70"
                        android:textSize="18sp"
                        android:fontFamily="@font/playfair_display"
                        android:textStyle="italic"
                        android:lineSpacingMultiplier="1.8" />

                </LinearLayout>

                <!-- Paragraph 2 -->
                <TextView
                    android:id="@+id/tvNarrativeP2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/colosseum_text_2"
                    android:textColor="@color/deep_blue_70"
                    android:textSize="18sp"
                    android:fontFamily="@font/playfair_display"
                    android:lineSpacingMultiplier="1.8" />

            </LinearLayout>

            <!-- SECTION 5 — Map Card -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_map_card"
                android:clipChildren="true"
                android:clipToPadding="true">

                <ImageView
                    android:id="@+id/imgMap"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:alpha="0.40"
                    android:contentDescription="Map" />

                <!-- Pin marker -->
                <View
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_map_pin" />

                <!-- Bottom bar — "View on interactive map" -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/view_on_map"
                        android:textColor="@color/deep_blue"
                        android:textSize="13sp"
                        android:letterSpacing="0.1"
                        android:fontFamily="@font/plus_jakarta_sans_bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_north_east"
                        android:contentDescription="Open map" />

                </LinearLayout>

            </FrameLayout>

            <!-- Bottom spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>

    </ScrollView>

    <!-- SECTION 7 — Fixed Bottom Action Bar -->
    <LinearLayout
        android:id="@+id/bottomActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/deep_blue_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="24dp">

            <!-- Retake Photo (outline) -->
            <TextView
                android:id="@+id/btnRetake"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_outline_button"
                android:gravity="center"
                android:text="@string/retake_photo"
                android:textColor="@color/gold_accent"
                android:textSize="14sp"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:textAllCaps="false" />

            <!-- Save to Journal (gold filled) -->
            <TextView
                android:id="@+id/btnSaveJournal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_gold_button"
                android:gravity="center"
                android:text="@string/save_to_journal"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
