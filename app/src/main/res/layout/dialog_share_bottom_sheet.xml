<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_content_top_rounded"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingTop="12dp"
    android:paddingBottom="32dp">

    <!-- Drag handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_drag_handle" />

    <!-- Landmark preview row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_info_tile"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/imgShareThumb"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_last_capture_image"
            android:contentDescription="Thumbnail" />

        <TextView
            android:id="@+id/tvShareTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter_bold"
            android:text="Share Discovery"
            android:textColor="@color/deep_blue"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Social icons row: 5 items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- Instagram -->
        <LinearLayout
            android:id="@+id/btnShareInstagram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/bg_share_circle">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_instagram"
                    android:contentDescription="Instagram" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/inter_bold"
                android:letterSpacing="0.03"
                android:text="INSTAGRAM"
                android:textAllCaps="true"
                android:textColor="@color/deep_blue_50"
                android:textSize="8sp" />

        </LinearLayout>

        <!-- WhatsApp -->
        <LinearLayout
            android:id="@+id/btnShareWhatsApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/bg_share_circle">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_whatsapp"
                    android:contentDescription="WhatsApp" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/inter_bold"
                android:letterSpacing="0.03"
                android:text="WHATSAPP"
                android:textAllCaps="true"
                android:textColor="@color/deep_blue_50"
                android:textSize="8sp" />

        </LinearLayout>

        <!-- Telegram -->
        <LinearLayout
            android:id="@+id/btnShareTelegram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/bg_share_circle">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_telegram"
                    android:contentDescription="Telegram" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/inter_bold"
                android:letterSpacing="0.03"
                android:text="TELEGRAM"
                android:textAllCaps="true"
                android:textColor="@color/deep_blue_50"
                android:textSize="8sp" />

        </LinearLayout>

        <!-- X (Twitter) -->
        <LinearLayout
            android:id="@+id/btnShareX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/bg_share_circle">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_x_twitter"
                    android:contentDescription="X" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/inter_bold"
                android:letterSpacing="0.03"
                android:text="X"
                android:textAllCaps="true"
                android:textColor="@color/deep_blue_50"
                android:textSize="8sp" />

        </LinearLayout>

        <!-- More -->
        <LinearLayout
            android:id="@+id/btnShareMore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/bg_share_circle">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_more_horiz"
                    android:contentDescription="More" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/inter_bold"
                android:letterSpacing="0.03"
                android:text="MORE"
                android:textAllCaps="true"
                android:textColor="@color/deep_blue_50"
                android:textSize="8sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Copy Link button -->
    <LinearLayout
        android:id="@+id/btnCopyLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_info_tile"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp"
        android:layout_marginBottom="8dp">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_container">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_link"
                android:contentDescription="Copy link" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Copy Link"
            android:textColor="@color/deep_blue"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="Go" />

    </LinearLayout>

    <!-- Save to Gallery button -->
    <LinearLayout
        android:id="@+id/btnSaveGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_info_tile"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp"
        android:layout_marginBottom="8dp">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_container">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_download"
                android:contentDescription="Save" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Save to Photo Gallery"
            android:textColor="@color/deep_blue"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="Go" />

    </LinearLayout>

</LinearLayout>
