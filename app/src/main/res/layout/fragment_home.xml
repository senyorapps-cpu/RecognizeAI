<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="56dp"
            android:paddingBottom="24dp"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/explore_today"
                android:textColor="@color/deep_blue"
                android:textSize="28sp"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:letterSpacing="-0.02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/location_info"
                android:textColor="@color/deep_blue_50"
                android:textSize="14sp"
                android:fontFamily="@font/plus_jakarta_sans_medium" />

        </LinearLayout>

        <!-- Main content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <!-- Last Capture Card -->
            <LinearLayout
                android:id="@+id/cardLastCapture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_last_capture_card"
                android:elevation="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/imgLastCapture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_last_capture_image"
                    android:scaleType="centerCrop"
                    android:contentDescription="Last capture" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_capture"
                        android:textColor="@color/deep_blue_50"
                        android:textSize="12sp"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/txtLastCaptureName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/the_colosseum"
                        android:textColor="@color/deep_blue"
                        android:textSize="20sp"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/tap_to_view"
                        android:textColor="@color/deep_blue_20"
                        android:textSize="12sp"
                        android:fontFamily="@font/plus_jakarta_sans_medium" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_north_east"
                    android:contentDescription="View" />

            </LinearLayout>

            <!-- Top Places Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:paddingBottom="120dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/top_places"
                        android:textColor="@color/deep_blue"
                        android:textSize="18sp"
                        android:fontFamily="@font/plus_jakarta_sans_bold" />

                    <TextView
                        android:id="@+id/btnViewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all"
                        android:textColor="@color/deep_blue_50"
                        android:textSize="14sp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/topPlacesContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                </HorizontalScrollView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
