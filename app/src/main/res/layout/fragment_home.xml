<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="56dp"
            android:paddingBottom="24dp"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/explore_today"
                android:textColor="@color/deep_blue"
                android:textSize="28sp"
                android:fontFamily="@font/inter_bold"
                android:letterSpacing="-0.02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/location_info"
                android:textColor="@color/deep_blue_50"
                android:textSize="14sp"
                android:fontFamily="@font/inter_medium" />

        </LinearLayout>

        <!-- Main content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <!-- Latest Snap Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/your_latest_snap"
                    android:textColor="@color/deep_blue"
                    android:textSize="20sp"
                    android:fontFamily="@font/inter_bold"
                    android:letterSpacing="-0.01" />

                <TextView
                    android:id="@+id/btnSeeHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_history"
                    android:textColor="@color/gold_accent"
                    android:textSize="13sp"
                    android:fontFamily="@font/inter_semibold" />

            </LinearLayout>

            <!-- Last Capture Card (new design) -->
            <FrameLayout
                android:id="@+id/cardLastCapture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_24"
                android:clipToOutline="true"
                android:elevation="8dp"
                android:clickable="true"
                android:focusable="true">

                <!-- 4:3 aspect image -->
                <ImageView
                    android:id="@+id/imgLastCapture"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Last capture" />

                <!-- Glassmorphic overlay at bottom -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="12dp"
                    android:background="@drawable/bg_glass_card"
                    android:elevation="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtLastCaptureName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/the_colosseum"
                            android:textColor="@color/deep_blue"
                            android:textSize="17sp"
                            android:fontFamily="@font/inter_bold"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_location_on"
                                android:importantForAccessibility="no" />

                            <TextView
                                android:id="@+id/txtLastCaptureLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:textColor="@color/deep_blue_50"
                                android:textSize="12sp"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:ellipsize="end" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btnViewDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_view_details_button"
                        android:fontFamily="@font/inter_bold"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="10dp"
                        android:text="@string/view_details"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

            </FrameLayout>

            <!-- Top Places Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:paddingBottom="120dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/top_places"
                        android:textColor="@color/deep_blue"
                        android:textSize="18sp"
                        android:fontFamily="@font/inter_bold" />

                    <TextView
                        android:id="@+id/btnViewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all"
                        android:textColor="@color/deep_blue_50"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_semibold" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/topPlacesContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                </HorizontalScrollView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
